<!-- Validation failure messages -->

<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Review #<%= @review.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag review_url(@review.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for like -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="like">
                  <input type="checkbox" id="like" name="like" value="1" <%= "checked" if @review.like %>>
                  Like
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for rating -->
          <div class="form-group">
            <label for="rating" class="col-sm-2 control-label">
              Rating
            </label>
            <div class="col-sm-10">
              <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @review.rating %>">
            </div>
          </div>

          <!-- Label and input for desc -->
          <div class="form-group">
            <label for="desc" class="col-sm-2 control-label">
              Desc
            </label>
            <div class="col-sm-10">
              <textarea id="desc" name="desc" placeholder="Desc" class="form-control" rows="3"><%= @review.desc %></textarea>
            </div>
          </div>

          <!-- Label and input for brew_id -->
          <div class="form-group">
            <label for="brew_id" class="col-sm-2 control-label">
              Brew
            </label>
            <div class="col-sm-10">
              <input type="text" id="brew_id" name="brew_id" placeholder="Brew" class="form-control" value="<%= @review.brew_id %>">
            </div>
          </div>

          <!-- Label and input for batch_id -->
          <div class="form-group">
            <label for="batch_id" class="col-sm-2 control-label">
              Batch
            </label>
            <div class="col-sm-10">
              <input type="text" id="batch_id" name="batch_id" placeholder="Batch" class="form-control" value="<%= @review.batch_id %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @review.user_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Review" class="btn btn-warning">
              or
              <%= link_to "Cancel", review_url(@review.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
